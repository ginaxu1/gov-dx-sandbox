# Database Configuration for Cloud PostgreSQL
CHOREO_OPENDIF_DATABASE_HOSTNAME={YOUR_HOSTNAME_HERE}
CHOREO_OPENDIF_DATABASE_PORT={YOUR_PORT_HERE}
CHOREO_OPENDIF_DATABASE_USERNAME={YOUR_USERNAME}
CHOREO_OPENDIF_DATABASE_PASSWORD={YOUR_PASSWORD_HERE}
CHOREO_OPENDIF_DATABASE_DATABASENAME={YOUR_DATABASE_NAME_HERE}
DB_SSLMODE=require

CHOREO_PDP_CONNECTION_SERVICEURL=http://localhost:8082
CHOREO_PDP_CONNECTION_CHOREOAPIKEY=wkjgNF

CHOREO_AUDIT_CONNECTION_SERVICEURL=http://localhost:3001

# Server Configuration
PORT=8080
HOST=localhost
CORS_ALLOWED_ORIGINS=*

# Set to "true" only when you need to run migrations
RUN_MIGRATION=false

# Asgardeo Configuration
ASGARDEO_CLIENT_ID={YOUR_ASGARDEO_CLIENT_ID_HERE}
ASGARDEO_CLIENT_SECRET={YOUR_ASGARDEO_CLIENT_SECRET_HERE}
ASGARDEO_BASE_URL={YOUR_ASGARDEO_BASE_URL_HERE}
ASGARDEO_SCOPES={YOUR_ASGARDEO_SCOPES_HERE}

ASGARDEO_TOKEN_URL={YOUR_ASGARDEO_BASE_URL_HERE}/oauth2/token

# Asgardeo JWT Authentication Configuration
ASGARDEO_JWKS_URL={YOUR_ASGARDEO_BASE_URL_HERE}/oauth2/jwks
ASGARDEO_ORG_NAME={YOUR_ORGANIZATION_NAME_HERE}

# Client IDs used by different portals (Need to validate JWT token claims)
ASGARDEO_MEMBER_PORTAL_CLIENT_ID={YOUR_MEMBER_PORTAL_CLIENT_ID_HERE}
ASGARDEO_ADMIN_PORTAL_CLIENT_ID={YOUR_ADMIN_PORTAL_CLIENT_ID_HERE}

# Roles used by different portals
ASGARDEO_MEMBER_PORTAL_ROLE={YOUR_MEMBER_PORTAL_ROLE_HERE}
ASGARDEO_ADMIN_PORTAL_ROLE={YOUR_ADMIN_PORTAL_ROLE_HERE}

# Authorization Configuration
# Controls behavior when no explicit permission is defined for an endpoint
# Options: fail_closed (most secure, deny all), fail_open_admin (allow admin only), fail_open_admin_system (allow admin/system)
AUTHORIZATION_MODE=fail_open_admin_system

# Enable strict mode to log warnings about undefined endpoints (helps identify missing permission mappings)
# Options: true, false
AUTHORIZATION_STRICT_MODE=false